<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity" android:tag="layout/activity_main_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ViewPagerTheme" />

        <View
            android:id="@+id/dropShadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/drop_shadow"
            app:layout_constraintBottom_toTopOf="@+id/bnvMain" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bnvMain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/BottomNavViewTheme"/>

    </android.support.constraint.ConstraintLayout>
         