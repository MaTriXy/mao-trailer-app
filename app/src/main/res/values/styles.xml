<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Launcher application theme. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@drawable/splash_screen_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Detail application theme. -->
    <style name="AppTheme.Details" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- ViewPager Theme -->
    <style name="ViewPagerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/view_pager_padding_bottom</item>
    </style>

    <!-- Bottom Navigation View Theme -->
    <style name="BottomNavViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="menu">@menu/bottom_menu</item>
    </style>

    <!-- Profile Text Theme -->
    <style name="ProfileTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawableTop">@drawable/icon</item>
        <item name="android:text">@string/movie_db_text</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Profile Button Theme -->
    <style name="ProfileButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/favorite_button_selector</item>
        <item name="android:text">@string/profile_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- CardView Theme -->
    <style name="ItemCardViewTheme">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Item ImageView Theme -->
    <style name="ItemImageViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Item TextView -->
    <style name="ItemTextViewTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Horizontal Item TextView -->
    <style name="HorizontalItemTextViewTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <!-- Horizontal Item TextView -->
    <style name="VerticalItemTextViewTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <!-- ProgressBar Theme -->
    <style name="ProgressBarTheme">
        <item name="android:visibility">visible</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/colorAccent</item>
    </style>

    <!-- Network Error Text Theme -->
    <style name="CatalogueListErrorTextTheme">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/response_list_error_text</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <!-- Network Error Button Theme-->
    <style name="CatalogueErrorButtonTheme">
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:text">@string/retry_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Error Text Theme -->
    <style name="ErrorTextTheme">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTop">@drawable/ic_no_connection</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/response_error_text</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <!-- Error Button Theme-->
    <style name="ErrorButtonTheme">
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:text">@string/retry_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Collapsing Title Theme -->
    <style name="CollapsingTextTheme" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextTheme.Inverse">
        <item name="android:textSize">30sp</item>
    </style>

    <!-- FloatingActionButton Theme -->
    <style name="FloatingActionButtonTheme">
        <item name="android:elevation">@dimen/fab_elevation</item>
        <item name="pressedTranslationZ">@dimen/fab_press_translation_z</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="fabSize">normal</item>
        <item name="rippleColor">@color/fabPressedColor</item>
        <item name="borderWidth">0dp</item>
        <item name="android:src">@drawable/ic_favorite_white_48dp</item>
    </style>

    <!-- Rating ImageView Theme -->
    <style name="RatingImageViewTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="srcCompat">@drawable/ic_icon_oval</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Rating TextView Theme -->
    <style name="RatingTextViewTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <!-- Cast TextView -->
    <style name="CastTextViewTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Crew Job TextView -->
    <style name="CrewJobViewTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Cast ImageView Theme -->
    <style name="CastImageViewTheme">
        <item name="android:layout_width">@dimen/cast_width</item>
        <item name="android:layout_height">@dimen/cast_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    
    <!-- Cast & Crew Header Text Theme -->
    <style name="CastCrewHeaderTextTheme" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/full_cast_crew_title</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Custom RatingBar Theme -->
    <style name="CustomRatingBarTheme" parent="@style/Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:maxHeight">25dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <!-- Overview Theme -->
    <style name="OverviewTheme" parent="TextAppearance.AppCompat.Display1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Average Text Theme -->
    <style name="AverageTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Genre Text Theme -->
    <style name="GenreTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Detail Poster Theme -->
    <style name="DetailPosterTheme">
        <item name="android:layout_width">@dimen/detail_poster_width</item>
        <item name="android:layout_height">@dimen/detail_poster_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Rectangle CardView Theme -->
    <style name="RectangleCardViewTheme">
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="android:shape">rectangle</item>
    </style>

    <!-- Image Overflow Menu Theme-->
    <style name="ImageOverflowMenuTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:layout_marginBottom">26dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_more_vert_white_18dp</item>
    </style>

</resources>
